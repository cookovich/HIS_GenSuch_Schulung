<!-- Aufgabe 1 -->
<!-- Ändern Sie den Wert für <B> von 200 zu 500 ohne die anderen Werte zu ändern! -->

<root>
	<A>100</A>
	<B>200</B>
	<C>300</C>
</root>

<!-- Lösung -->

<root>
	<B ueberschreiben="Y">500</B>
</root>




